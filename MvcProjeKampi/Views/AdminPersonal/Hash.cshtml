
@{
    ViewBag.Title = "Hash";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    <form action="" method="get">
        <div class="row g-3 align-items-center my-4">
            <div class="col-auto">
                <input id="hash" name="data" class="form-control form-control-lg" type="text" value="@Context.Request.QueryString["data"]" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-lg btn-primary">Hash</button>
            </div>
        </div>
    </form>

    @if (ViewBag.Hash == true)
    {
        <p>
            SHA1: <span class="user-select-all">@ViewBag.SHA1</span>
        </p>
        <p>
            MD5: <span class="user-select-all">@ViewBag.MD5</span>
        </p>
    }
</div>
