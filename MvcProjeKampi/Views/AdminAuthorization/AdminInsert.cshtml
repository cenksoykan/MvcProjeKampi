@using EntityLayer.Concrete
@model Admin

@{
    ViewBag.Title = "Yeni yönetici ekle";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="container">
    <h2 class="text-center">@ViewBag.Title</h2>

    <div class="row mt-4">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto">
            @using (Html.BeginForm("AdminInsert", "AdminAuthorization", FormMethod.Post))
            {
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(x => x.AdminUsername, new { @class = "form-control", @placeholder = "Kullanıcı", @requiered = "" })
                    @Html.LabelFor(x => x.AdminUsername, "Kullanıcı adı")
                    @Html.ValidationMessageFor(x => x.AdminUsername)
                </div>
                <div class="form-floating mb-3">
                    @Html.PasswordFor(x => x.AdminPassword, new { @class = "form-control", @placeholder = "Parola", @requiered = "", @aria_describedby = "passwordHelpBlock" })
                    @Html.LabelFor(x => x.AdminPassword, "Yeni yönetici parolası")
                    @Html.ValidationMessageFor(x => x.AdminPassword)
                    <div id="passwordHelpBlock" class="form-text">
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                    </div>
                </div>
                <div class="form-floating mb-3">
                    @Html.DropDownListFor(x => x.AdminRole, (List<SelectListItem>)ViewBag.AdminRoles, new { @class = "form-select", @placeholder = "Rol", @requiered = "" })
                    @Html.LabelFor(x => x.AdminRole, "Yönetici rolü")
                    @Html.ValidationMessageFor(x => x.AdminRole)
                </div>
                <div class="mb-3 form-check form-switch">
                    @Html.CheckBoxFor(x => x.AdminStatus, new { @class = "form-check-input", @value = "true", @checked = "" })
                    @Html.LabelFor(x => x.AdminStatus, "Görünürlük durumu", new { @class = "form-check-label" })
                </div>
                <div class="text-end">
                    <a href="@Url.Action("Index")" class="btn btn-outline-primary btn-lg">
                        Vazgeç
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg">Ekle</button>
                </div>
            }
        </div>
    </div>
</div>
