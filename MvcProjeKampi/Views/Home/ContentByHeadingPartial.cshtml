@using EntityLayer.Concrete
@model List<Content>

@if (Model.Count() > 0)
{
    <h5 class="py-2 px-3 user-select-all border-top border-bottom bg-light">@Model.FirstOrDefault().Heading.HeadingName</h5>
    <div class="list-group list-group-flush">
        @foreach (var item in Model)
        {
            <div class="list-group-item py-3">
                <p class="mb-1">@item.ContentValue</p>
                <div class="text-end mt-1">
                    <small class="text-muted">
                        <span class="fw-bold user-select-all">@item.Writer.WriterName @item.Writer.WriterSurname</span>
                        &nbsp;&middot;&nbsp;
                        <span class="user-select-all">@item.ContentCreatedOn.ToString("d MMM yyy")</span>
                    </small>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info d-flex align-items-center m-0" role="contentinfo">
        <i class="bi-info-circle-fill lh-1 fs-4 me-3"></i>
        <span>Lütfen içeriğini görüntülemek istediğiniz bir başlık seçiniz</span>
    </div>
}
