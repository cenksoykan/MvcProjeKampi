@using MvcProjeKampi.Models
@model StatisticModel

@{
    ViewBag.Title = "İstatistikler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 gy-2 gy-md-3 gy-lg-4 d-flex justify-content-around align-items-stretch align-content-center flex-wrap mt-2 mt-md-1 mt-lg-0">
        <div class="col">
            <div class="card h-100 text-white bg-primary">
                <div class="card-header">Kategoriler</div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@Model.CategoryCount</h5>
                    <p class="card-text fw-light">toplam kategori</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-dark bg-info">
                <div class="card-header">Başlıklar</div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@Model.HeadingCountSoftware</h5>
                    <p class="card-text fw-light">yazılım kategorisine ait başlık</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-dark bg-light">
                <div class="card-header">Yazarlar</div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@Model.WriterCountFiltered</h5>
                    <p class="card-text fw-light">isminde <em>'a'</em> geçen yazar</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-white bg-primary">
                <div class="card-header">Kategoriler</div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@Model.CategoryTopHeading</h5>
                    <p class="card-text fw-light">en çok yazılan başlık kategorisi</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-white bg-primary">
                <div class="card-header">Kategoriler</div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@Model.CategoryStatusDiff</h5>
                    <p class="card-text fw-light">kategori görünürlüğü farkı</p>
                </div>
            </div>
        </div>
    </div>
</div>
